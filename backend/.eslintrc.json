{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": [ "error", "always" ],
    "indent": [ "error", 4, { "SwitchCase": 1 } ],
    "no-console": 0
  },
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  }
}
