{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": [ "error", "always" ],
    "indent": [ "error", 4, { "SwitchCase": 1 } ],
    "no-console": 0
  },
  "globals": {
    "it": false,
    "describe": false,
    "before": false,
    "beforeEach": false,
    "after": false,
    "afterEach": false,
    "process": false,
    "require": false
  }
}
